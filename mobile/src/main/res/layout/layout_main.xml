<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/logo"/>

    <ImageView
        android:id="@+id/imgCart"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgLogo"
        android:layout_marginTop="10dp"
        android:background="@drawable/swing_07" />

    <ImageButton
        android:id="@+id/btnGoodSwing"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_below="@id/imgCart"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnswing" />

    <ImageButton
        android:id="@+id/btnSwingList"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_below="@id/imgCart"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnlist" />

    <ImageButton
        android:id="@+id/btnGoSwing"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/swing_18" />
</RelativeLayout>
